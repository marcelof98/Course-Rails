<p id="notice"><%= notice %></p>

<h1><%= t("showing.coin") %></h1>

<form>
  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:description) %>
    <%= text_field_tag nil, @coin.description, class:"form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:acronym) %>
    <%= text_field_tag nil, @coin.acronym, class:"form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:mining_type_acronym) %>
    <%= text_field_tag nil, @coin.mining_type.acronym, class:"form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, @coin.class.human_attribute_name(:symbol) %>
    <p><%= image_tag @coin.url_image, size: "25x25" %></p>
  </div>

  <%= link_to t("links.back"), coins_path, class:"btn btn-primary" %>
</form>
